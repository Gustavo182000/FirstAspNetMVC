@model IEnumerable<EmprestimosModel>;
@{
    ViewData["title"] = "Empréstimos";
}

    <div class="container">
      <div class="row">
            <div class="col-9">
                <h3>Empréstimos</h3>
            </div>
        <div class="col">
            <a class="btn btn-success" asp-controller="Emprestimo" asp-action="Cadastrar"><i class="bi bi-journal-plus mx-1"></i>Cadastrar novo empréstimo</a>
        </div>
      </div>
    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success mt-3" role="alert">
            @TempData["MensagemSucesso"]
        </div>
    }
    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger mt-3" role="alert">
            @TempData["MensagemErro"]
        </div>
    }
    <table class="table table-hover" id="Emprestimos">
        <thead>
            <tr>
                <th scope="col">Recebedor</th>
                <th scope="col">Fornecedor</th>
                <th scope="col">Titulo</th>
                <th scope="col">DataAtualizacao</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var emprestimo in Model)
                {
                    <tr>
                        <td>@emprestimo.Recebedor</td>
                        <td>@emprestimo.Fornecedor</td>
                        <td>@emprestimo.Titulo</td>
                        <td>@emprestimo.DataAtualizacao</td>
                        <td>
                            <a asp-controller="Emprestimo" asp-action="Editar" asp-route-id="@emprestimo.Id" class="btn btn-primary"><i class="bi bi-pen-fill mx-1"></i>Editar</a>
                            <a asp-controller="Emprestimo" asp-action="Excluir" asp-route-id="@emprestimo.Id" class="btn btn-danger"><i class="bi bi-x mx-1"></i>Excluir</a>
                        </td>
                    </tr>
                }
            }



        </tbody>
    </table>
    </div>

