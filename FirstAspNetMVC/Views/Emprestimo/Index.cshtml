@model IEnumerable<EmprestimosModel>;
@{
    ViewData["title"] = "Empréstimos";
}

    <div class="container">
      <div class="row">
            <div class="col-9">
                <h3>Empréstimos</h3>
            </div>
        <div class="col">
            <a class="btn btn-success" asp-controller="Emprestimo" asp-action="Cadastrar" >Cadastrar novo empréstimo</a>
        </div>
      </div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Recebedor</th>
                <th scope="col">Fornecedor</th>
                <th scope="col">Titulo</th>
                <th scope="col">DataAtualizacao</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var emprestimo in Model)
                {
                    <tr>
                        <td>@emprestimo.Recebedor</td>
                        <td>@emprestimo.Fornecedor</td>
                        <td>@emprestimo.Titulo</td>
                        <td>@emprestimo.DataAtualizacao</td>
                        <td>
                            <a asp-controller="Emprestimo" asp-action="Editar" asp-route-id="@emprestimo.Id" class="btn btn-primary">Editar</a>
                            <a asp-controller="Emprestimo" asp-action="Excluir" asp-route-id="@emprestimo.Id" class="btn btn-danger">Excluir</a>
                        </td>
                    </tr>
                }
            }



        </tbody>
    </table>
    </div>

